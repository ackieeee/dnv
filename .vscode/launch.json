    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Current Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        },
        {
            "name": "dnv: compare files",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "${input:firstEnvFile}",
                "${input:secondEnvFile}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "firstEnvFile",
            "type": "promptString",
            "description": "Path to the first .env file",
            "default": "sample1.txt"
        },
        {
            "id": "secondEnvFile",
            "type": "promptString",
            "description": "Path to the second .env file",
            "default": "sample2.txt"
        }
    ]
}
